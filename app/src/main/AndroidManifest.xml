<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.attendanceqrcode">

    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.CAMERA" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_PRIVILEGED_PHONE_STATE" />
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".AttendanceStatusActivity"
            android:theme="@style/Theme.AttendanceQrCode"></activity>
        <activity
            android:name=".ClassDetailActivity"
            android:exported="true"
            android:theme="@style/Theme.AttendanceQrCode" />
        <activity
            android:name=".HistoryAttendanceActivity"
            android:exported="true"
            android:theme="@style/Theme.AttendanceQrCode" />
        <activity
            android:name=".MainActivity"
            android:theme="@style/Theme.AttendanceQrCode" />
        <activity
            android:name=".SplashScreenActivity"
            android:theme="@style/Theme.AttendanceQrCode">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".DangNhapActivity"
            android:theme="@style/Theme.AttendanceQrCode" />
        <activity
            android:name=".FogetPasswordActivity"
            android:theme="@style/Theme.AttendanceQrCode" />
        <activity
            android:name=".ChatDetailActivity"
            android:theme="@style/Theme.AttendanceQrCode" />
        <activity
            android:name=".CaptureAct"
            android:screenOrientation="portrait"
            android:stateNotNeeded="true"
            android:theme="@style/zxing_CaptureTheme" />

        <service
            android:name=".services.AppFirebaseService"
            android:exported="false">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT" />
            </intent-filter>
        </service>
    </application>

</manifest>