<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AccountDetailActivity"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:background="@color/background">

        <ImageView
            android:id="@+id/img_back_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_back"
            android:padding="5dp"
            app:tint="@color/white" />
        <TextView
            android:layout_marginStart="10dp"
            android:id="@+id/tv_name_subject"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:text="Thông tin sinh viên"
            android:singleLine="true"
            android:layout_marginEnd="10dp"
            android:textSize="16dp"
            android:textStyle="bold"
            android:textColor="@color/white"/>

    </RelativeLayout>


    <ImageView
        android:src="@drawable/image_group_chat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="30dp"
        />

    <LinearLayout
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Họ tên: "
                android:singleLine="true"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_ten_sinhvien"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nguyễn Văn A"
                android:singleLine="true"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:textStyle="bold"/>
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Ngày sinh: "
                android:singleLine="true"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_ngaysinh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nguyễn Văn A"
                android:singleLine="true"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Mã SV: "
                android:singleLine="true"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_masv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nguyễn Văn A"
                android:singleLine="true"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Số CMND: "
                android:singleLine="true"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_so_cmnd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nguyễn Văn A"
                android:singleLine="true"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_alignParentTop="true"
                android:id="@+id/tv_title"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Địa chỉ: "
                android:singleLine="true"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:layout_toEndOf="@id/tv_title"
                android:id="@+id/tv_dia_chi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nguyễn Văn A"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Giới tính: "
                android:singleLine="true"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nam"
                android:singleLine="true"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Email: "
                android:singleLine="true"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nguyễn Văn A"
                android:singleLine="true"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="SĐT: "
                android:singleLine="true"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:textStyle="bold" />
            <TextView
                android:id="@+id/tv_sdt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Nguyễn Văn A"
                android:singleLine="true"
                android:layout_marginEnd="10dp"
                android:textSize="16dp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        android:id="@+id/btn_chat"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textSize="18dp"
        android:textAllCaps="false"
        android:background="@drawable/bg_buttonlogin"
        android:text="Nhắn tin"
        />






</LinearLayout>